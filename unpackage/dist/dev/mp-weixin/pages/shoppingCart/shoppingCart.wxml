<view class="container"><block wx:if="{{cartGoods.length>0}}"><view class="cart-view"><view class="list"><view class="group-item"><view class="goods"><block wx:for="{{cartGoods}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="{{['item',isEditCart?'edit':'']}}"><view data-event-opts="{{[['tap',[['checkedItem',[index]]]]]}}" class="{{['checkbox',item.checked?'checked':'']}}" bindtap="__e"></view><view class="cart-goods"><image class="img" src="{{item.listPicUrl}}"></image><view class="info"><view class="t"><text class="name">{{item.goodsName}}</text><text class="num">{{"x"+item.number}}</text></view><view class="attr">{{(isEditCart?'已选择:':'')+(item.goodsSpecifitionNameValue||'')}}</view><view class="b"><text class="price">{{"￥"+item.retailPrice}}</text><view class="selnum"><view data-event-opts="{{[['tap',[['cutNumber',[index]]]]]}}" class="cut" bindtap="__e">-</view><input class="number" disabled="true" type="number" value="{{item.number}}"/><view data-event-opts="{{[['tap',[['addNumber',[index]]]]]}}" class="add" bindtap="__e">+</view></view></view></view></view></view></block></view></view></view><view class="cart-bottom"><view data-event-opts="{{[['tap',[['checkedAll',['$event']]]]]}}" class="{{['checkbox',checkedAllStatus?'checked':'']}}" bindtap="__e">{{"全选("+cartTotal.checkedGoodsCount+")"}}</view><view class="total">{{!isEditCart?'￥'+cartTotal.checkedGoodsAmount:''}}</view><view data-event-opts="{{[['tap',[['editCart',['$event']]]]]}}" class="delete" bindtap="__e">{{!isEditCart?'编辑':'完成'}}</view><block wx:if="{{isEditCart}}"><view data-event-opts="{{[['tap',[['deleteCart',['$event']]]]]}}" class="checkout" bindtap="__e">删除所选</view></block><block wx:else><view data-event-opts="{{[['tap',[['checkoutOrder',['$event']]]]]}}" class="checkout" bindtap="__e">下单</view></block></view></view></block><block wx:else><view class="no-cart"><view class="c"><view class="title-box">购物车空空如也～</view><view data-event-opts="{{[['tap',[['toIndexPage',['$event']]]]]}}" class="to-index-btn" bindtap="__e">去逛逛</view></view></view></block></view>