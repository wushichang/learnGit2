
.a-section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin-bottom: 20rpx;
}
.a-popular .goods .item {
    border-bottom: 1px solid #f4f4f4;
    margin: 0 20rpx;
    height: 264rpx;
    width: 710rpx;
    padding-bottom: 20rpx;
}
.a-popular .goods .img {
    margin-top: 12rpx;
    margin-right: 12rpx;
    float: left;
    width: 240rpx;
    height: 240rpx;
}
.a-popular .goods .text {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: nowrap;
            flex-wrap: nowrap;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    overflow: hidden;
    height: 264rpx;
    width: 456rpx;
}
.a-popular .goods .name {
    width: 456rpx;
    display: block;
    color: #333;
    line-height: 50rpx;
    font-size: 30rpx;
    margin-top: 20rpx;
}
.a-popular .goods .right {
  float: left;
  height: 264rpx;
  width: 456rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-flow: row nowrap;
          flex-flow: row nowrap;
}
.a-popular .goods .price {
    width: 456rpx;
    display: block;
    color: #b4282d;
    line-height: 50rpx;
    font-size: 33rpx;
    margin-top: 30rpx;
}
.dzprice {
    color: #b4282d;
}
.yjprice {
    margin-left: 30rpx;
    text-decoration: line-through;
    color: #999;
}




